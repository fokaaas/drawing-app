<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/violet"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/point_tool"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/point_icon">
        </ImageButton>

        <ImageButton
            android:id="@+id/line_tool"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/line_icon">
        </ImageButton>

        <ImageButton
            android:id="@+id/rectangle_tool"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/rectangle_icon">
        </ImageButton>

        <ImageButton
            android:id="@+id/ellipse_tool"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ellipse_icon">
        </ImageButton>

        <ImageButton
            android:id="@+id/circle_line_tool"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/circle_line_icon">
        </ImageButton>

        <ImageButton
            android:id="@+id/cube_tool"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/cube_icon">
        </ImageButton>

        <ImageButton
            android:id="@+id/table_tool"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/table_icon">
        </ImageButton>
    </LinearLayout>

</LinearLayout>